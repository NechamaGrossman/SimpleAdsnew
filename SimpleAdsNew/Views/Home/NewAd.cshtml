@model int
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>New Ad</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/newad">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" placeholder="Name" class="form-control" name="name" />
                </div>
                <div class="col-md-6">
                    <input type="text" placeholder="Phone Number" class="form-control" name="phonenumber" />
                </div>
                <div class="col-md-6">
                    <input type="hidden" placeholder="Phone Number" value="@Model"class="form-control" name="UserId" />
                </div>
            </div>
            <br/>
            <textarea name="description" class="form-control" rows="10" placeholder="Description"></textarea>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>